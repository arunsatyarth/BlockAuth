                    <form onSubmit="App.createAccount(); return false;">
                        <input type="textbox" id="form_username" class="form-control" placeholder="Username" />
                        <input type="textbox" id="form_name" class="form-control" placeholder="Name" />
                        <input type="textbox" id="form_picture" class="form-control" placeholder="Picture" />
                      <button type="submit" class="btn btn-primary">Create ccount</button>
                    </form>
              </div>
              <div class="" id="account_details_div">
                <p>Found your account</p>
                <a href="#" class="link-2 w-button" id="editdetails2">Edit</a>
                <p id="username"></p>
                <p id="Name"></p>
                <p id="picture"></p>
                
              </div>
          </div>

        </div>
      </div>
    </div>
</div>
    

  